---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<span
  class="text-xs font-medium flex flex-col items-center gap-1 col-span-2 border border-zinc-800/30 rounded-lg py-1.5 px-1.5 hover:bg-zinc-800/30 select-none cursor-default transition-colors duration-300"
  title={title}
>
  <slot name="icon" />
  <slot />
</span>
