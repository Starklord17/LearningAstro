---
interface Props {
  href: string;
  target?: string;
  rel?: string;
}


const { href, ...props } = Astro.props;
---

<a
  href={href}
  class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-zinc-800 text-sm font-medium rounded-md"
  {...props}
>
  <slot name="icon" />
  <slot />
</a>
