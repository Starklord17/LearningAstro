---
interface Props {
  id: string;
  name: string;
  details: string;
  success: boolean;
  flightNumber: number;
  img: string;
}

const { id, name, details, success, flightNumber, img } = Astro.props;
const succesText = success ? "Success" : "Failure";
---

<a
  class="rounded-lg border shadow-md bg-zinc-800/20 border-zinc-900 hover:scale-105 hover:bg-zinc-800/50 hover:border-zinc-500 transition flex flex-col"
  href={`/launch/${id}`}
>
  <picture class="flex justify-center p-4">
    <img class="mb-5 rounded-lg" src={img} alt={`Patch for launch ${id}`} transition:name="imglaunch" />
  </picture>

  <header class="p-4 flex-grow">
    <span
      class:list={[
        "text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
        {
          "bg-green-200 text-green-900": success,
          "bg-red-200 text-red-900": !success,
        },
      ]}
    >
      {succesText}
    </span>

    <h2 class="my-2 text-xl font-bold tracking-tight" transition:name="namelaunch">
    {name} -  Flight #{flightNumber}
    </h2>

    <p>
      {details?.length > 100 ? details.slice(0, 100) + "..." : details}
    </p>
  </header>
</a>
